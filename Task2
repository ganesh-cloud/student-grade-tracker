def get_student_data():
    """Collects student details and grades."""
    name = input("Enter student's name: ")
    roll_no = input("Enter roll number: ")
    marks = []
    for i in range(1, 6):
        mark = float(input(f"Enter marks for subject {i}: "))
        marks.append(mark)
    return name, roll_no, marks

def calculate_performance(marks):
    """Calculates total, average, and assigns a grade."""
    total = sum(marks)
    average = total / len(marks)
    if average >= 90:
        grade = 'A+'
    elif average >= 80:
        grade = 'A'
    elif average >= 70:
        grade = 'B+'
    elif average >= 60:
        grade = 'B'
    elif average >= 50:
        grade = 'C'
    elif average >= 40:
        grade = 'D'
    else:
        grade = 'F'
    return total, average, grade

def display_results(name, roll_no, marks, total, average, grade):
    """Displays the student's performance results."""
    print("\n--- Student Performance ---")
    print(f"Name: {name}")
    print(f"Roll No: {roll_no}")
    print(f"Marks: {marks}")
    print(f"Total Marks: {total}")
    print(f"Average Marks: {average:.2f}")
    print(f"Grade: {grade}")

def main():
    """Main function to drive the program."""
    while True:
        name, roll_no, marks = get_student_data()
        total, average, grade = calculate_performance(marks)
        display_results(name, roll_no, marks, total, average, grade)
        cont = input("\nDo you want to enter details for another student? (yes/no): ").strip().lower()
        if cont != 'yes':
            print("Exiting the program.")
            break

if __name__ == "__main__":
    main()
